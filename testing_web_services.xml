<!-- Step 6: Create Meters -->
     <!-- Step 6a: Create an Energy Meter -->
POST https://portfoliomanager.energystar.gov/wstest/property/(propertyId)/meter
Content-Type: application/xml
Authorization: Basic
<meter>
     <type>Electric</type>
     <name>Electric Main Meter</name>
     <unitOfMeasure>kBtu (thousand Btu)</unitOfMeasure>
     <metered>true</metered>
     <firstBillDate>2010-01-01</firstBillDate>
     <inUse>true</inUse>
</meter>
<!-- Save and store the system generatge "meterId" to use in future calls -->

     <!-- Step 6b: Create an Water Meter -->
POST https://portfoliomanager.energystar.gov/wstest/property/(propertyId)/meter
Content-Type: application/xml
Authorization: Basic
